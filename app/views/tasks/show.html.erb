<h1>Task: <%= @task.title %></h1>
<div class="show-container">

  <div class="show-content">

    <p id="notice"><%= notice %></p>

    <p>
      <strong>Title:</strong>
      <%= @task.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @task.description %>
    </p>

    <p>
      <strong>Status:</strong>
      <%= @task.status %>
    </p>

    <p>
      <strong>Deadline:</strong>
      <%= @task.deadline %>
    </p>

    <div class="edit-delete">
    <div>
      <svg width="30px" height="20px" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="-14 0 36 18" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      <%= link_to 'Edit', edit_task_path(@task), class:"edit-btn" %>
    </div>
    <div>
      <svg width="30px" height="16px" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="-14 0 34 18" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure?' }, class:"delete-btn" %>
    </div>
    </div>

  </div>

    <div class="home-task-btn">
        <%= link_to 'Back', tasks_path, class:"back-btn" %>
    </div>

</div>
